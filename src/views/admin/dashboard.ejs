<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css?v=<%= Date.now() %>">
</head>
<body>

    <div class="admin-wrapper">
        <%- include('partials/sidebar', { path: '/admin/dashboard' }) %>

        <div class="admin-content">
            <div class="admin-topbar">
                <h4 class="mb-0 text-dark">Ders Yönetimi</h4>
                <div class="user-info">
                    <span class="me-2 text-muted">Hoş geldin,</span>
                    <strong class="text-dark"><%= currentUser.username %></strong>
                </div>
            </div>

            <div class="admin-main-container">
                <%- include('../partials/messages') %>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="admin-card">
                            <div class="admin-card-header">
                                <h3>Mevcut Dersler</h3>
                                <span class="badge bg-primary"><%= courses ? courses.length : 0 %> Ders</span>
                            </div>
                            <div class="card-body p-0">
                                <% if (courses && courses.length > 0) { %>
                                    <div class="list-group list-group-flush">
                                        <% courses.forEach(course => { %>
                                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                                <div>
                                                    <a href="/admin/courses/<%= course.id %>" class="fw-bold text-decoration-none fs-5">
                                                        <%= course.title %>
                                                    </a>
                                                    <p class="mb-0 text-muted small"><%= course.description %></p>
                                                </div>
                                                <form action="/admin/courses/delete" method="POST" onsubmit="return confirm('Bu dersi silmek istediğinize emin misiniz?');" class="m-0">
                                                    <input type="hidden" name="courseId" value="<%= course.id %>">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Sil
                                                    </button>
                                                </form>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <p class="p-4 text-center text-muted">Henüz hiç ders eklenmemiş.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="admin-card">
                            <div class="admin-card-header bg-light">
                                <h3>+ Yeni Ders Ekle</h3>
                            </div>
                            <div class="card-body p-4">
                                <form action="/admin/courses/create" method="POST">
                                    <div class="mb-3">
                                        <label for="title" class="form-label fw-bold">Ders Başlığı</label>
                                        <input type="text" class="form-control" id="title" name="title" required placeholder="Örn: Web Programlama">
                                    </div>
                                    <div class="mb-3">
                                        <label for="description" class="form-label fw-bold">Açıklama</label>
                                        <textarea class="form-control" id="description" name="description" rows="4" placeholder="Ders hakkında kısa bilgi..."></textarea>
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-plus-lg"></i> Dersi Oluştur
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>