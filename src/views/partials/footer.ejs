    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const searchResults = document.getElementById('searchResults');

            if (!searchInput || !searchResults) {
                return;
            }

            let searchTimeout;

            searchInput.addEventListener('keyup', (e) => {
                const term = e.target.value;
                clearTimeout(searchTimeout);

                if (term.length < 2) { 
                    searchResults.style.display = 'none';
                    searchResults.innerHTML = '';
                    return;
                }

                searchTimeout = setTimeout(async () => {
                    try {
                        const response = await fetch(`/arama?term=${encodeURIComponent(term)}`);
                        if (!response.ok) return;

                        const results = await response.json();
                        
                        let html = '';
                        if (results.length > 0) {
                            results.forEach(result => {
                                const badgeColor = result.type === 'Not' ? 'bg-primary' : 'bg-success';
                                html += `
                                    <a href="${result.url}" class="search-result-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="result-title">${result.title}</span>
                                            <span class="badge ${badgeColor} result-type">${result.type}</span>
                                        </div>
                                    </a>
                                `;
                            });
                        } else {
                            html = '<div class="p-3 text-muted text-center">Sonuç bulunamadı.</div>';
                        }

                        searchResults.innerHTML = html;
                        searchResults.style.display = 'block';

                    } catch (err) {
                        console.error('Arama hatası:', err);
                        searchResults.style.display = 'none';
                    }
                }, 300);
            });

            document.addEventListener('click', (e) => {
                if (searchResults && !searchInput.contains(e.target) && !searchResults.contains(e.target)) {
                    searchResults.style.display = 'none';
                }
            });
        });
    </script>

