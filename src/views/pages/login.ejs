<%- include('../partials/header', { title: title }) %>

<div class="auth-wrapper">
    <div class="auth-card shadow-lg">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4"><i class="bi bi-box-arrow-in-right text-primary" style="font-size: 3rem;"></i><h2 class="card-title h3 mt-2"><%= title %></h2></div>
            <%- include('../partials/messages') %> 
            
            <form action="/giris" method="POST">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="loginInput" name="loginInput" placeholder="Kullanıcı Adı veya E-posta" required>
                    <label for="loginInput">Kullanıcı Adı veya E-posta</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifre" required>
                    <label for="password">Şifre</label>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg py-3">Giriş Yap</button>
                </div>
            </form>
            <hr class="my-4">
            <p class="text-center text-muted mb-0">Hesabınız yok mu? <a href="/kayit" class="fw-bold text-decoration-none">Kayıt Olun</a></p>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>