                                    'linear-gradient(135deg, #d63384 0%, #a61e61 100%)'  // Pembe
                                ];
                                const randomBg = colors[index % colors.length];
                            %>
                                <div class="swiper-slide">
                                    <a href="/notlar/<%= note.id %>" class="text-decoration-none">
                                        <div class="card note-card-slider h-100">
                                            
