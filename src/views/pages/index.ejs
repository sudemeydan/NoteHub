            </section>

            <section id="tum-dersler">
                <h3 class="section-title mb-4">TÃ¼m Dersler</h3>
                
                <% if (courses.length > 0) { %>
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        <% courses.forEach((course) => { %>
                            <div class="col">
                                <a href="/dersler/<%= course.id %>" class="text-decoration-none">
                                    <div class="course-card-modern h-100">
                                        
                                        <% 
                                            let icon = 'bi-journal-code';
                                            let colorClass = 'text-primary';
                                            let t = course.title.toLowerCase();

                                            if (t.includes('c#') || t.includes('.net')) { icon = 'bi-filetype-cs'; colorClass = 'text-info'; }
                                            else if (t.includes('js') || t.includes('node')) { icon = 'bi-filetype-js'; colorClass = 'text-warning'; }
                                            else if (t.includes('python')) { icon = 'bi-filetype-py'; colorClass = 'text-primary'; }
                                            else if (t.includes('java')) { icon = 'bi-filetype-java'; colorClass = 'text-danger'; }
                                            else if (t.includes('html') || t.includes('css')) { icon = 'bi-globe'; colorClass = 'text-success'; }
                                            else if (t.includes('veri') || t.includes('sql')) { icon = 'bi-database-fill'; colorClass = 'text-secondary'; }
                                            else if (t.includes('yapay') || t.includes('ai')) { icon = 'bi-cpu-fill'; colorClass = 'text-dark'; }
                                        %>
                                        
                                        <div class="course-status-icon">
                                            <% if (!course.isPublic) { %>
