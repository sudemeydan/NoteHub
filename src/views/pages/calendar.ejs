<%- include('../partials/header', { title: title }) %>

<div class="container mt-5">
    <div class="row gy-4">
        <div class="col-lg-6">
            <div class="page-title mb-4">
                <h1 class="display-5 fw-bold text-dark"><%= title %></h1>
                <p class="lead text-muted">Lütfen sağdaki listeden hocanın meşgul saatlerini kontrol edin ve uygun bir zaman dilimi için talep gönderin.</p>
            </div>

            <%- include('../partials/messages') %>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title mb-3">Yeni Randevu Talebi</h5>
                    <form action="/randevu-talep" method="POST">
                        <input type="hidden" name="teacherId" value="<%= teacherId %>">
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="appointmentDate" class="form-label fw-bold">Tarih Seçin</label>
                                <input type="date" class="form-control" id="appointmentDate" name="appointmentDate" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="appointmentTime" class="form-label fw-bold">Saat Seçin (Başlangıç)</label>
                                <input type="time" class="form-control" id="appointmentTime" name="appointmentTime" required>
                                <div class="form-text">Randevular 30 dakika sürecektir.</div>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="studentNotes" class="form-label fw-bold">Randevu Konusu / Mesajınız</label>
                            <textarea class="form-control" id="studentNotes" name="studentNotes" rows="4" placeholder="Hocanızla ne hakkında görüşmek istediğinizi kısaca belirtin..." required></textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-send-check-fill me-2"></i>Randevu Talebi Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm" style="max-height: 600px; overflow-y: auto;">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-calendar-x-fill text-danger me-2"></i>Hocanın Dolu Saatleri</h5>
                </div>
                <div class="list-group list-group-flush">
                    <% if (busySlots && busySlots.length > 0) { %>
                        <% busySlots.forEach(slot => { %>
                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <div>
                                    <strong class="d-block"><%= new Date(slot.startTime).toLocaleDateString('tr-TR', {day: '2-digit', month: 'long', year: 'numeric', weekday: 'long'}) %></strong>
                                    <span class="text-danger">
                                        <%= new Date(slot.startTime).toLocaleTimeString('tr-TR', {hour: '2-digit', minute:'2-digit'}) %>
                                        -
                                        <%= new Date(slot.endTime).toLocaleTimeString('tr-TR', {hour: '2-digit', minute:'2-digit'}) %>
                                    </span>
                                </div>
                                <% if (slot.status === 'busy') { %>
                                    <span class="badge bg-danger rounded-pill">Meşgul (Hoca)</span>
                                <% } else { %>
                                    <span class="badge bg-secondary rounded-pill">Dolu (Randevu)</span>
                                <% } %>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="list-group-item text-muted p-3 text-center">
                            Hocanın takviminde kayıtlı meşgul bir saat bulunmuyor.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>