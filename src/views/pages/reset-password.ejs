<%- include('../partials/header', { title: title }) %>

<div class="auth-wrapper">
    <div class="auth-card shadow-lg">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <i class="bi bi-key-fill text-success" style="font-size: 3rem;"></i>
                <h2 class="card-title h3 mt-2"><%= title %></h2>
            </div>
            <%- include('../partials/messages') %> 
            
            <form action="/sifre-sifirla/<%= token %>" method="POST">
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Yeni Şifre" required>
                    <label for="password">Yeni Şifre</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Yeni Şifre Tekrar" required>
                    <label for="confirmPassword">Yeni Şifre Tekrar</label>
                </div>
                
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success btn-lg py-3">Şifreyi Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>