<%- include('../partials/header', { title: title }) %>

<div class="auth-wrapper">
    <div class="auth-card shadow-lg">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <i class="bi bi-envelope-exclamation text-warning" style="font-size: 3rem;"></i>
                <h2 class="card-title h3 mt-2"><%= title %></h2>
                <p class="text-muted small">Kayıtlı e-posta adresinizi girin, size şifre sıfırlama bağlantısı gönderelim.</p>
            </div>
            <%- include('../partials/messages') %> 
            
            <form action="/sifremi-unuttum" method="POST">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="E-Posta Adresi" required>
                    <label for="email">E-Posta Adresi</label>
                </div>
                
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-warning btn-lg py-3 text-white fw-bold">Bağlantı Gönder</button>
                </div>
            </form>
            <hr class="my-4">
            <p class="text-center text-muted mb-0">Hatırladınız mı? <a href="/giris" class="fw-bold text-decoration-none">Giriş Yapın</a></p>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>